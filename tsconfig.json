{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "preserveValueImports": false,
    "outDir": "./build",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@middleware/*": ["middleware/*"],
      "@services/*": ["services/*"],
      "@interfaces/*": ["interfaces/*"],
      "@config/*": ["config/*"],
      "@models/*": ["models/*"]
    }
  },
  "include": ["src", "types"]
}