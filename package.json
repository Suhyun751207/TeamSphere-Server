{
  "name": "teamsphere-server",
  "description": "TeamSphere Backend Server - Real-time Collaboration SaaS Dashboard",
  "main": "src/app/index.ts",
  "version": "1.0.0",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec \"ts-node -r tsconfig-paths/register ./src/app/index.ts\"",
    "build": "rimraf dist && tsc",
    "build:watch": "tsc --watch",
    "build:prod": "rimraf dist && tsc --project tsconfig.json && npm run copy-assets",
    "copy-assets": "copyfiles -u 1 src/**/*.json src/**/*.sql src/**/*.html dist/",
    "start": "node dist/app/index.js",
    "start:prod": "NODE_ENV=production node dist/app/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "generate-docs": "ts-node -r tsconfig-paths/register ./scripts/generate-swagger.ts",
    "deploy-docs": "npm run generate-docs && firebase deploy --only hosting",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "postinstall": "npm run build"
  },
  "_moduleAliases": {
    "@config": "dist/config",
    "@services": "dist/services",
    "@interfaces": "dist/interfaces",
    "@utils": "dist/utils",
    "@middleware": "dist/middleware",
    "@models": "dist/models"
  },
  "keywords": [
    "collaboration",
    "saas",
    "dashboard",
    "realtime"
  ],
  "author": "ITC",
  "license": "ISC",
  "dependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/mongoose": "^5.11.96",
    "@types/socket.io": "^3.0.1",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.4.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongoose": "^7.8.7",
    "multer": "^2.0.2",
    "mysql2": "^3.14.3",
    "mysql2-wizard": "^2.0.8",
    "nodemon": "^3.1.10",
    "redis": "^5.8.2",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tspec": "^0.1.112",
    "type-wizard": "^1.0.19",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.11",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "jest": "^29.6.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}